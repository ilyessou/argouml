  <repository>
    <connection>scm:cvs:pserver:guest@cvs.tigris.org:/cvs:argouml</connection>
    <url>http://argouml.tigris.org/source/browse/argouml/</url>
  </repository>
  <mailingLists>
    <mailingList>
